<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>

    <div class="form-group ">
        <label class="">Title</label>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group ">
        <label class="">opinion</label>
        <%= f.text_area :body,class: "form-control" %>
    </div>

    <div class="form-group ">
        <%= f.submit "Update book", class:"btn btn-primary  btn-block edit-btn " %>
    </div>
    <% end %>
    <%= link_to "Show", book_path(@book.id),class: "edit-link" %>|
    <%= link_to "Back", books_path, class: "edit-link" %>
    <div>
</div>
