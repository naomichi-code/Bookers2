<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

  <nav class="navbar navbar-inverse ">
      <div class="container ">
        <div class="navbar-header">
          <span>Bookers</span>
        </div>
          <ul class="nav  navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to " Home", user_path, class: "glyphicon glyphicon-home", 'aria-hidden' => true %></li>
              <li><%= link_to " User", users_path, class: "glyphicon glyphicon-link", 'aria-hidden' => true %></li>
              <li><%= link_to " books", books_path, class: "glyphicon glyphicon-edit", 'aria-hidden' => true %></li>
              <li><%= link_to " logout",destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-in", 'aria-hidden' => true %></li>

            <% else %>
              <li><%= link_to " Home", root_path, class: "glyphicon glyphicon-home", 'aria-hidden' => true %></li>
              <li><%= link_to " about", home_about_path, class: "glyphicon glyphicon-link", 'aria-hidden' => true %></li>
              <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit", 'aria-hidden' => true %></li>
              <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in", 'aria-hidden' => true %></li>
            <% end %>
          </ul>
      </div>
    </nav>
<div class="container">
<main>
    <%= yield %>
</main>
  <footer>
  <p class=text-right>CopyRight Infratop.inc</p>
  </footer>
</div>
  </body>
</html>
