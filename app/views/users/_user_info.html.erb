
<% if book.errors.any? %>
    <div id="error_explanation">
         <h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
         <ul>
         <% book.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
        </ul>
    </div>
<% end %>

    <div class="col-md-3">
        <h2>User Info</h2>
        <table class="table">
            <tbody>
                <tr><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></tr>
                <tr>
                    <td>name</td>
                    <td><%= user.name %></td>
                </tr>
                <tr>
                    <td>introduction</td>
                    <td><%= user.introduction %></td>
                </tr>
            </tbody>
        </table>
        <div class="col-md-12 btn btn-default btn-block edit-btn">
        <%= link_to "",edit_user_path(current_user.id),class: "glyphicon glyphicon-wrench icon-danger",'aria-hidden' => true %>
        </div>
        
        <%= form_for(book) do |f| %>
            <div class="col-md-12">
                <h2>New book</h2>
                <div>
                    <label class="">Title</label><br>
                    <%= f.text_field :title %>
                </div>
                <div>
                    <label class="">Opinion</label></br>
                    <%= f.text_area :body %>
                </div>               
                    <%= f.submit %>
                <% end %>
            </div>

    </div>

