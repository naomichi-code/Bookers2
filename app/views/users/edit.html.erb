</div>
<div class="field">
    <label class="">Image</label>
    <%= f.attachment_field :profile_image %>
</div>
<div class="field">
    <label class="">introduction</label>
    <%= f.text_area :introduction %>
</div>
<div class="action">
    <%= f.submit %>
</div>
